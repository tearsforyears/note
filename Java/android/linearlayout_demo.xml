<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">
    <TextView
        android:text="0."
        android:textColor="#f70"
        android:gravity="end"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:textColor="#f70"
        android:gravity="center"
        android:textSize="20sp"
        android:text="@string/bt_calc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_calc"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textColor="#f70"
            android:gravity="center"
            android:textSize="20sp"
            android:text="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:id="@+id/button" />

        <Button
            android:textColor="#f70"
            android:gravity="center"
            android:textSize="20sp"
            android:text="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>
        <Button
            android:textColor="#f70"
            android:gravity="center"
            android:textSize="20sp"
            android:text="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>
        <Button
            android:textColor="#f70"
            android:gravity="center"
            android:textSize="20sp"
            android:text="/"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textColor="#f70"
            android:gravity="center"
            android:textSize="20sp"
            android:text="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>
        <Button
            android:textColor="#f70"
            android:gravity="center"
            android:textSize="20sp"
            android:text="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>
        <Button
            android:textColor="#f70"
            android:gravity="center"
            android:textSize="20sp"
            android:text="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>
        <Button
            android:textColor="#f70"
            android:gravity="center"
            android:textSize="20sp"
            android:text="*"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textColor="#f70"
            android:gravity="center"
            android:textSize="20sp"
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>

        <Button
            android:textColor="#f70"
            android:gravity="center"
            android:textSize="20sp"
            android:text="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:id="@+id/button2" />

        <Button
            android:textColor="#f70"
            android:gravity="center"
            android:textSize="20sp"
            android:text="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>
        <Button
            android:textColor="#f70"
            android:gravity="center"
            android:textSize="20sp"
            android:text="-"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textColor="#f70"
            android:gravity="center"
            android:textSize="20sp"
            android:text="."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>
        <Button
            android:textColor="#f70"
            android:gravity="center"
            android:textSize="20sp"
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>
        <Button
            android:textColor="#f70"
            android:gravity="center"
            android:textSize="20sp"
            android:text="="
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>
        <Button
            android:textColor="#f70"
            android:gravity="center"
            android:textSize="20sp"
            android:text="+"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>
    </LinearLayout>
</LinearLayout>